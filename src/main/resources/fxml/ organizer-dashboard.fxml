<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eventmanagement.controllers.OrganizerDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #388e3c; -fx-text-fill: white;">
            <Text text="Event Organizer Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Text fx:id="userInfoLabel" style="-fx-fill: white;"/>
            <Button text="Logout" style="-fx-padding: 8; -fx-background-color: #d32f2f; -fx-text-fill: white;" onAction="#handleLogout"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-min-width: 200;">
            <Button fx:id="createEventBtn" text="Create Event" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showCreateEvent"/>
            <Button fx:id="manageEventsBtn" text="Manage Events" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showManageEvents"/>
            <Button fx:id="ticketMgmtBtn" text="Ticket Management" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showTicketManagement"/>
            <Button fx:id="attendeeCommunicationBtn" text="Attendee Communication" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showAttendeeCommunication"/>
            <Button fx:id="myReportsBtn" text="My Reports" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showReports"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <!-- Content will be dynamically loaded here -->
        </StackPane>
    </center>
</BorderPane>