<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanagement.controllers.AdminDashboardController">
    <children>
        <Label text="Admin Dashboard" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 20;"/>

        <TabPane>
            <tabs>
                <Tab text="User Management">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 20;">
                            <HBox spacing="10">
                                <Button fx:id="refreshUsersBtn" text="Refresh" onAction="#refreshUsers"/>
                                <Button fx:id="addUserBtn" text="Add User" onAction="#showAddUserDialog"/>
                            </HBox>
                            <TableView fx:id="usersTable">
                                <columns>
                                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120"/>
                                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Event Approvals">
                    <content><Label text="Event approvals coming soon..."/></content>
                </Tab>
                <Tab text="System Settings">
                    <content><Label text="System settings coming soon..."/></content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
