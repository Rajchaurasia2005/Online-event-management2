<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eventmanagement.controllers.AttendeeDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #f57c00; -fx-text-fill: white;">
            <Text text="Attendee Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Text fx:id="userInfoLabel" style="-fx-fill: white;"/>
            <Button text="Logout" style="-fx-padding: 8; -fx-background-color: #d32f2f; -fx-text-fill: white;" onAction="#handleLogout"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-min-width: 200;">
            <Button fx:id="browseEventsBtn" text="Browse Events" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showBrowseEvents"/>
            <Button fx:id="myRegistrationsBtn" text="My Registrations" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showMyRegistrations"/>
            <Button fx:id="ticketHistoryBtn" text="Ticket History" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showTicketHistory"/>
            <Button fx:id="messagesBtn" text="Messages" style="-fx-padding: 12; -fx-font-size: 12;" onAction="#showMessages"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <!-- Content will be dynamically loaded here -->
        </StackPane>
    </center>
</BorderPane>