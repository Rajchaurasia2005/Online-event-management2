<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eventmanagement.controllers.LoginController">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 40;">
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-color: #fafafa;">

                    <!-- Header -->
                    <Text text="Event Management System" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #1a1a1a;" textAlignment="CENTER"/>
                    <Text text="Login to your account" style="-fx-font-size: 14; -fx-fill: #666666;" textAlignment="CENTER"/>

                    <!-- Username -->
                    <VBox spacing="8">
                        <Label text="Username:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                        <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-padding: 10; -fx-border-radius: 5; -fx-font-size: 12;"/>
                    </VBox>

                    <!-- Password -->
                    <VBox spacing="8">
                        <Label text="Password:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-padding: 10; -fx-border-radius: 5; -fx-font-size: 12;"/>
                    </VBox>

                    <!-- Error Message -->
                    <Label fx:id="errorLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 12;"/>

                    <!-- Login Button -->
                    <Button fx:id="loginButton" text="Login" style="-fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #1976d2; -fx-text-fill: white; -fx-border-radius: 5; -fx-cursor: hand;" onAction="#handleLogin"/>

                    <!-- Demo Credentials -->
                    <VBox spacing="5" style="-fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: #f9f9f9;">
                        <Text text="Demo Credentials:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                        <Text text="Admin: admin / admin123" style="-fx-font-size: 11;"/>
                        <Text text="Organizer: organizer1 / org123456" style="-fx-font-size: 11;"/>
                        <Text text="Attendee: attendee1 / att123456" style="-fx-font-size: 11;"/>
                    </VBox>

                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
